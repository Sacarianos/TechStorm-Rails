<script type="type/javascript">
$(function(){

$('#Joinbut').on('click', function (e) {

   <%=@connection = ActiveRecord::Base.connection %>
<% @connection.exec_query("insert into collaborates values ("+current_user.id.to_s+","+@project.id.to_s+");") %>

});



$('#Deletebut').on('click', function (e) {

   <%=@connection = ActiveRecord::Base.connection %>
<% @connection.exec_query("Delete from  projects where id="+@project.id.to_s) %>

});


$('#Followbut').on('click', function (e) {

   <%=@connection = ActiveRecord::Base.connection %>
<% @connection.exec_query("insert into follows values ("+current_user.id.to_s+","+@project.id.to_s+");") %>

});

    

});</script>