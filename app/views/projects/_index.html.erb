<div class = "container">
<h1>Projects</h1>


    <% @projects.each do |project| %>
     <div >
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <img id="avatar" class="editable img-responsive" alt="profile pic" src= <%=asset_path('profile-pic.jpg')%> >
      <div class="caption">
        <h3><%= link_to project.name, project %></h3>
        <p>Description: <%= project.description%> </p>
      </div>
    </div>
  </div>
</div>
<%end%>
<br>
<%= link_to 'New Project', new_project_path %>
</div>
